<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BudgetEase</title>

    <link rel="icon" type="image/x-icon" href="~/images/logo.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Gowun+Batang&display=swap"> <!-- Google Fonts import -->
    <style>
        /* Apply Gowun Batang font to the entire page */
        body {
            font-family: 'Gowun Batang', serif;
        }

        /* Hide category options initially */
        .category-options {
            display: none;
        }

        /* Navbar styling */
        .navbar {
            background-color: white; /* White background for the navbar */
            transition: background-color 0.5s ease; /* Smooth background transition */
        }

        .navbar-brand img {
            height: 80px; /* Bigger logo */
            transition: transform 0.3s ease; /* Smooth transform effect */
        }

            /* Logo hover effect */
            .navbar-brand img:hover {
                transform: scale(1.1); /* Grow logo on hover */
            }

        /* Navbar link styling */
        .nav-link {
            color: #004d00 !important; /* Dark green color for text */
            padding: 10px 20px; /* Add padding for a bigger clickable area */
            font-size: 1.2rem; /* Slightly bigger font for links */
            font-weight: bold; /* Make the links bold */
            border-radius: 5px; /* Round edges */
            margin-right: 15px; /* Add space between links */
            transition: transform 0.3s ease; /* Smooth scaling effect */
        }

            /* Navbar link hover effect (only enlarge) */
            .nav-link:hover {
                transform: scale(1.1); /* Slightly enlarge the link on hover */
            }

        /* Styling for the Logout button */
        .btn-outline-danger {
            color: #004d00;
            border-color: #004d00;
        }

            .btn-outline-danger:hover {
                background-color: #e60000;
                border-color: #e60000;
            }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="BudgetEase Logo" style="width:80px; height: auto;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Stats">Statistics</a>
                        </li>
                    </ul>
                    <!-- Logout button on the right -->
                    <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                        <button class="btn btn-outline-danger" type="submit">Logout</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
