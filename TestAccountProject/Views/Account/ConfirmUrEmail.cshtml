@{
    ViewData["Title"] = "Email Confirmation";
}

<h2>Email Confirmation Required</h2>

<div class="alert alert-info">
    <p>An email has been sent to your provided address. Please check your inbox and click the confirmation link to verify your email address.</p>
    <p>If you do not receive the email within a few minutes, please check your spam or junk folder.</p>
</div>

<p>
    <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Login">Return to Login</a>
</p>
